 <h1>ジャンル一覧・追加</h1>

<%= form_with model: @genre,url:admin_genres_path, local: true do |f| %>
  <%#= f.label :name, 'ジャンル名' %>
  ジャンル名
  <%= f.text_field :name, class:'form-control' %>
  <%= f.submit '新規登録', class: 'btn btn-primary btn-block' %>
<% end %>


<main>
  <div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <h2>ジャンル</h2>
      <table class='table table-hover table-inverse'>
  <thead>
   <% @genres.each do |genre| %>
  </thead>
  <tbody>
  <tr>
    <th><%= genre.name %></th>    
    <td>
    <%= link_to "編集する", admin_edit_genre_path(genre.id) ,class: "btn btn-success" %>
    </td>
     <% end %>

    </tr>
      </tbody>
</table>
</div>
  </div>
</div>
</main>    

