<main>
  <tbody>
  <div class='container px-5 px-sm-0'>
  <div class='row'>

    <div class='col-md-8 offset-md-1'>

      <h2>会員一覧</h2>

      <table class='table table-hover table-inverse'>
  <thead>
    <tr>
        <th>会員ID</th>
        <td> <%= @customer.id %> </td> 
    </tr>
    <tr> <th>氏名</th>
          <td> <%= @customer.last_name %><%= @customer.first_name %>  </td>
    </tr>
    <tr> <th>フリガナ</th>
          <td> <%= @customer.last_name_kana %><%= @customer.first_name_kana %>  </td>
    </tr>
    <tr> <th>郵便番号</th>
          <td> <%= @customer.postal_code %> </td>
    </tr>
    <tr> <th>住所</th>
          <td> <%= @customer.address %> </td>
    </tr>
    <tr> <th>電話番号</th>
          <td> <%= @customer.telephone_number %> </td>
    </tr>
    <tr>
        <th>メールアドレス</th>
        <td> <%= @customer.email %>  </td>
    </tr>
    <tr> 
        <th>ステータス</th>
        <td><% if  @customer.is_active == true %>
             <p> 有効</p>
            <% else %>
             <p>退会</p>
            <% end %></td>
    </tr>
    <td><%= link_to "編集する", admin_customer_path, class: "btn btn-success offset-md-3" %></td>
      <th colspan="4"></th>
  </thead>


  </tbody>
</table>
</div>
</div>
</div>
 </main>