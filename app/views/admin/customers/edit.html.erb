<%= form_with model: @customer, url: admin_update_customer_path, method: :patch do |f| %>
  <h4>タイトル</h4>
　　
　<table class='table'>
  <tr>
	  <th>会員ID</th>
	  <td><%= @customer.id %></td>
  </tr>
  <tr>
	  <th>氏名</th>
	  <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
  </tr>
   <tr>
	  <th>フリガナ</th>
	  <td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
  </tr>
  <tr>
	  <th>郵便番号</th>
	  <td> <%= f.text_area :postal_code %></td>
  </tr>
  <tr>
	  <th>住所</th>
	  <td> <%= f.text_area :address %></td>
  </tr>
  <tr>
	  <th>電話番号</th>
	  <td> <%= f.text_area :telephone_number %></td>
  </tr>
  <tr>
	  <th>メールアドレス</th>
	  <td><%= f.email_field :email%></td>
  </tr>
           <tr>
              <td><%= f.label :is_active, "会員ステータス" %></td>
              <td>
                <div class="radio_button">
                  <%= f.radio_button :is_active, true %>
                  <%= f.label :is_active, "有効", value: true %>
                  <%= f.radio_button :is_active, false %>
                  <%= f.label :is_active, "退会", value: false %>
                </div>
              </td>
            </tr>
</table>

  <%= f.submit '編集内容を保存' %>
<% end %>