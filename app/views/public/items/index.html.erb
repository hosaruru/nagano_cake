<h2>商品一覧</h2>（全<%= @item %>件）

<main>

  <div class='container px-5 px-sm-0'>
  <div class='row'>

    <div class='col-md-8 offset-md-1'>


      <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @items.each do |item| %>
  <tr>
<td><%= link_to public_items_path(item.id) do %>
   <% if item.image.attached? %>
    <%= image_tag item.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>
</td>
<td>
    <%= item.name %> 
</td>
<td>
    ￥<%= item.price %> 
    <% end %>
</td>



</tr>

<% end %>

  </tbody>
</table>
</div>
</div>
</div>
<%= paginate @items %>
 </main>