<h1>配送先登録/一覧</h1>
<%= form_with model: @address,url:public_addresses_path, local: true do |f| %>
  <%#= f.label :name, 'ジャンル名' %>
  郵便番号<%= f.text_field :postal_code, class:'form-control' %><br>
  住所<%= f.text_field :address, class:'form-control' %><br>
  宛名<%= f.text_field :name, class:'form-control' %><br>
  <%= f.submit '新規登録', class: 'btn btn-primary btn-block' %><br>
<% end %>

<main>
  <div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
       <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
  <% @addresses.each do |address| %>
  <tr>
<td>
    <%= address.postal_code %> 
</td>
<td>
    <%= address.address %> 
</td>
<td>
    <%= address.name %> 
</td>
<td><%= link_to "編集する", public_edit_address_path(address.id) ,class: "btn btn-success" %></td>
<td><%= link_to "削除する", public_destroy_address_path(address.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
</tr>

<% end %>

  </tbody>
</table>
</div>
  </div>
</div>
</main>    
