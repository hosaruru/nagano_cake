<h1>注文履歴一覧</h1>
<table class='table'>
<thead>
        <tr class="table-active">
          <td>注文日</td>
          <td class="col-5">配送先</td>
          <td class="col-3">注文商品</td>
          <td>支払額</td>
          <td>ステータス</td>
          <td>注文詳細</td>
        </tr>
</thead>
<tbody>
 <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
            <td>
              <%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <td>
              <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %>
              <% end %>
            </td>
            <td><%= order.total_payment %></td>
            <td><%= order.status_i18n %></td>
            <td><%= link_to "表示する", public_order_path(order.id), class: "btn btn-primary btn-sm px-3" %></td>
          </tr>
        <% end %>
  </tbody>
       
</table>
